@page "/inputtext"
<div>
    <div class="content-section introduction">
        <div class="feature-intro">
            <h1>Inputtext</h1>
            <p>Inputtext renders and input field where the user can enter data.</p>
        </div>
    </div>

    <div class="content-section implementation">
        <h3 class="first">Basic</h3>
        <Inputtext @bind-model="value1" />
        <span style="marginLeft: .5em">@value1</span>

        <h3>Floating Label</h3>
        <span class="p-float-label">
            <Inputtext Id="usename" model="@value2" />
            <label for="username">Username</label>
        </span>

        <h3>Disabled</h3>
        <Inputtext @bind-model="value3" disabled />
    </div>
    <InputTextDoc />
</div>

@code {
    private string value1 = string.Empty;
    private string value2 = "123333";
    private string value3 = "PrimeVue";
}
