@page "/sidebar"
<div>
    <div class="content-section introduction">
        <div class="feature-intro">
            <h1>Sidebar</h1>
            <p>Sidebar is a panel component displayed as an overlay at the edges of the screen.</p>
        </div>
    </div>

    <div class="content-section implementation">
        <Sidebar @bind-visible="visibleLeft" baseZIndex="1000">
            <h1 style="fontWeight:normal">Left Sidebar</h1>
            <Button @onclick="()=>visibleLeft = false" label="Save" CssClass="p-button-success" style="margin-right:.25em" />
            <Button @onclick="()=>visibleLeft = false" label="Cancel" CssClass="p-button-secondary" />
        </Sidebar>

        <Sidebar @bind-visible="visibleRight" baseZIndex="1000" position="right">
            <h1 style="fontWeight:normal">Right Sidebar</h1>
            <Button @onclick="()=>visibleRight = false" label="Save" CssClass="p-button-success" style="margin-right:.25em" />
            <Button @onclick="()=>visibleRight = false" label="Cancel" CssClass="p-button-secondary" />
        </Sidebar>

        <Sidebar @bind-visible="visibleTop" baseZIndex="1000" position="top">
            <h1 style="fontWeight:normal">Top Sidebar</h1>
            <Button @onclick="()=>visibleTop = false" label="Save" CssClass="p-button-success" style="margin-right:.25em" />
            <Button @onclick="()=>visibleTop = false" label="Cancel" CssClass="p-button-secondary" />
        </Sidebar>

        <Sidebar @bind-visible="visibleBottom" baseZIndex="1000" position="bottom">
            <h1 style="fontWeight:normal">Bottom Sidebar</h1>
            <Button @onclick="()=>visibleBottom = false" label="Save" CssClass="p-button-success" style="margin-right:.25em" />
            <Button @onclick="()=>visibleBottom = false" label="Cancel" CssClass="p-button-secondary" />
        </Sidebar>

        <Sidebar @bind-visible="visibleFull" baseZIndex="1000" position="full">
            <h1 style="fontWeight:normal">Full Screen</h1>
            <Button @onclick="()=>visibleFull = false" label="Save" CssClass="p-button-success" style="margin-right:.25em" />
            <Button @onclick="()=>visibleFull = false" label="Cancel" CssClass="p-button-secondary" />
        </Sidebar>

        <Button icon="pi pi-arrow-right" @onclick="()=>visibleLeft = true" style="margin-right:.25em" />
        <Button icon="pi pi-arrow-left" @onclick="()=>visibleRight = true" style="margin-right:.25em" />
        <Button icon="pi pi-arrow-down" @onclick="()=>visibleTop = true" style="margin-right:.25em" />
        <Button icon="pi pi-arrow-up" @onclick="()=>visibleBottom = true" style="margin-right:.25em" />
        <Button icon="pi pi-th-large" @onclick="()=>visibleFull = true" />
    </div>
     <SidebarDoc/>
</div>
@code {
    private bool visibleLeft = false;
    private bool visibleRight = false;
    private bool visibleTop = false;
    private bool visibleBottom = false;
    private bool visibleFull = false;
}
