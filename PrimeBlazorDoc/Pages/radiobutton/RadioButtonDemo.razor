@page "/radiobutton"
@using PrimeBlazorDoc.Models;
<div>
    <div class="content-section introduction">
        <div class="feature-intro">
            <h1>RadioButton</h1>
            <p>RadioButton is an extension to standard radio button element with theming.</p>
        </div>
    </div>

    <div class="content-section implementation">
        <h3 class="first">Basic</h3>
        <div class="p-grid">
            <div class="p-col-12">
                <RadioButton inputId="rb1" name="city" value=@("New York") @bind-model="city" />
                <label for="rb1" class="RadioButton-label">New York</label>
            </div>
            <div class="p-col-12">
                <RadioButton inputId="rb2" name="city" value=@("San Francisco") @bind-model="city" />
                <label for="rb2" class="RadioButton-label">San Francisco</label>
            </div>
            <div class="p-col-12">
                <RadioButton inputId="rb3" name="city" value=@("Los Angeles") @bind-model="city" />
                <label for="rb3" class="RadioButton-label">Los Angeles</label>
            </div>
        </div>
        Selected City : @this.city

        <h3>Advanced with Preselection, Value Binding and Disabled Option</h3>
        <div class="p-grid">
            <div class="p-col-12">
                <RadioButton inputId="rb1" name="template" value="@(new Theme(){Brand= "Ultima", Key="U"})" @bind-model="theme" />
                <label for="rb1" class="RadioButton-label">Ultima</label>
            </div>
            <div class="p-col-12">
                <RadioButton inputId="rb2" name="template" value="@(new Theme(){Brand= "Serenity", Key="S"})" @bind-model="theme" />
                <label for="rb2" class="RadioButton-label">Serenity</label>
            </div>
            <div class="p-col-12">
                <RadioButton inputId="rb3" name="template" value="@(new Theme(){Brand= "Apollo", Key="A"})" @bind-model="theme" />
                <label for="rb3" class="RadioButton-label">Apollo</label>
            </div>
            <div class="p-col-12">
                <RadioButton inputId="rb4" name="template" value="@(new Theme(){Brand= "Babylon", Key="B"})" @bind-model="theme" disabled="true" />
                <label for="rb3" class="RadioButton-label">Babylon</label>
            </div>
        </div>
        Selected Template : @this.theme.Brand
    </div>
</div>

@code {
    private string? city = null;
    public Theme theme = new Theme()
        {
            Brand = "Serenity",
            Key = "S"
        };
}
