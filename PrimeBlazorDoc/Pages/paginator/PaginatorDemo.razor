@page "/paginator"
<div>
    <div class="content-section introduction">
        <div class="feature-intro">
            <h1>Paginator</h1>
            <p>Paginator is a generic component to display content in paged format.</p>
        </div>
    </div>

    <div class="content-section implementation">
        <h3>Basic</h3>
        <Paginator rows="10" totalRecords="totalRecords" rowsPerPageOptions="rowsPageOptions"></Paginator>

        <h3>Custom</h3>
        <Paginator @bind-first="first" rows="1" totalRecords="totalRecords2" template="FirstPageLink PrevPageLink CurrentPageReport NextPageLink LastPageLink">
            <LeftTemplate>
                <Button icon="pi pi-refresh" onclick="reset" />
            </LeftTemplate>
            <RightTemplate>
                <Button icon="pi pi-refresh" />
            </RightTemplate>
        </Paginator>
        <div class="image-gallery">
            <img src="/demo/images/nature/@(image).jpg" />
        </div>
    </div>
    <PaginatorDoc />
</div>
<style scoped>
    .p-button.p-button-icon-only {
        border-radius: 0;
    }

    .image-gallery {
        text-align: center;
        padding: 1em;
    }
</style>
@code {
    private int first = 0;
    private int totalRecords = 120;
    private int totalRecords2 = 12;
    private List<RowsPerPageDropdown.option> rowsPageOptions = new List<RowsPerPageDropdown.option>(){
        new RowsPerPageDropdown.option(){label="10",value= 10},
        new RowsPerPageDropdown.option(){label="20",value= 20},
        new RowsPerPageDropdown.option(){label="30",value= 30}
    };
    private void reset()
    {
        this.first = 0;
    }
    private string image()
    {
        return "nature" + (this.first + 1);
    }
}
