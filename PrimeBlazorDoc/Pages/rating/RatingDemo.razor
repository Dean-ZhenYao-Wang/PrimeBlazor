@page "/rating"
<div>
    <div class="content-section introduction">
        <div class="feature-intro">
            <h1>Rating</h1>
            <p>Rating component is a star based selection input.</p>
        </div>
    </div>

    <div class="content-section implementation">
        <h3 class="first">Basic @val1</h3>
        <Rating @bind-model="val1" />

        <h3>No Cancel @val2</h3>
        <Rating @bind-model="val2" cancel="false" />

        <h3>ReadOnly</h3>
        <Rating value="5" isReadonly="true" stars="10" cancel="false" />

        <h3>Disabled</h3>
        <Rating value="8" disabled="true" stars="10" />
    </div>
    <RatingDoc/>
</div>

@code {
    private int? val1 = null;
    private int? val2 = 3;
}
