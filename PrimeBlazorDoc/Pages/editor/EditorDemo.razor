@page "/editor"
<div>
    <div class="content-section introduction">
        <div class="feature-intro">
            <h1>Editor</h1>
            <p>Editor is rich text editor component based on Quill.</p>
        </div>
    </div>

    <div class="content-section implementation">
        <h3 class="first">Default</h3>
        <Editor @bind-model="value1" editorStyle="height: 320px" />
        @value1
        <h3>Customized</h3>
        <Editor @bind-model="value2" editorStyle="height: 320px">
            <ToolbarTemplate>
                <span class="ql-formats">
                    <button class="ql-bold"></button>
                    <button class="ql-italic"></button>
                    <button class="ql-underline"></button>
                </span>
            </ToolbarTemplate>
        </Editor>
    </div>
    <EditorDoc />
</div>

@code {
    private string value1 = "<div>Welcome to PrimeVue <b>Editor</b></div><div><br></div>";
    private string value2 = "";
}
