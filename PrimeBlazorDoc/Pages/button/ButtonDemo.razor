@page "/button"
<div>
    <div class="content-section introduction">
        <div class="feature-intro">
            <h1>Button</h1>
            <p>Button is an extension to standard button element with icons and theming.</p>
        </div>
    </div>

    <div class="content-section implementation">
        <h3 class="first">Basic</h3>
        <Button label="Click" />
        <Button label="Click" icon="pi pi-check" />
        <Button label="Click" icon="pi pi-check" iconPos="right" />
        <Button icon="pi pi-check" />
        <Button label="Click" disabled />

        <h3>Severities</h3>
        <Button label="Primary" />
        <Button label="Secondary" CssClass="Button-secondary" />
        <Button label="Success" CssClass="Button-success" />
        <Button label="Info" CssClass="Button-info" />
        <Button label="Warning" CssClass="Button-warning" />
        <Button label="Danger" CssClass="Button-danger" />

        <h3>Raised Buttons</h3>
        <Button label="Primary" CssClass="Button-raised" />
        <Button label="Secondary" CssClass="Button-raised Button-secondary" />
        <Button label="Success" CssClass="Button-raised Button-success" />
        <Button label="Info" CssClass="Button-raised Button-info" />
        <Button label="Warning" CssClass="Button-raised Button-warning" />
        <Button label="Danger" CssClass="Button-raised Button-danger" />

        <h3>Rounded Buttons</h3>
        <Button label="Primary" CssClass="Button-rounded" />
        <Button label="Secondary" CssClass="Button-rounded Button-secondary" />
        <Button label="Success" CssClass="Button-rounded Button-success" />
        <Button label="Info" CssClass="Button-rounded Button-info" />
        <Button label="Warning" CssClass="Button-rounded Button-warning" />
        <Button label="Danger" CssClass="Button-rounded Button-danger" />
    </div>
    <ButtonDoc/>
</div>
<style lang="scss" scoped>
    button{
        margin-right: .5em;
    }
</style>

