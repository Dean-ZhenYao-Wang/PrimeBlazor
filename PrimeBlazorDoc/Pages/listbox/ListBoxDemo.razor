@page "/listbox"
<div>
    <div class="content-section introduction">
        <div class="feature-intro">
            <h1>ListBox</h1>
            <p>ListBox is used to select one or more values from a list of items.</p>
        </div>
    </div>

    <div class="content-section implementation">
        <h3 class="first">Single</h3>
        <ListBox @bind-value="selectedCity" options="cities" optionLabel="name" TItem="Models.City" />

        <h3>Multiple</h3>
        <ListBox multiple="true" @bind-values="selectedCities" options="cities" optionLabel="name" TItem="Models.City" />
        <h3>Advanced with Templating and Filtering</h3>
        <ListBox @bind-value="selectedCar" options="cars" filter optionLabel="brand" listStyle="max-height:250px" style="width:15em" TItem="Models.Car" Context="option">
            <Template>
                <div className="p-clearfix">
                    <img alt="@option.brand" src="/demo/images/car/@(option.brand).png" style="display:inline-block;margin:5px 0 0 5px;width:48px" />
                    <span style="float:right;margin:1.25em .5em 0 0">@option.brand</span>
                </div>
            </Template>
        </ListBox>
    </div>
</div>
@code {
    private Models.City selectedCity = null;
    private List<Models.City> selectedCities = null;
    private Models.Car selectedCar = null;
    private List<Models.City> cities = new List<Models.City>()
    {
        new Models.City{name="New York",code="NY" },
        new Models.City{name="Rome",code="RM" },
        new Models.City{name="London",code="LDN" },
        new Models.City{name="Istanbul",code="IST" },
        new Models.City{name="Paris",code="PRS" }
    };
    private List<Models.Car> cars = new List<Models.Car>()
    {
        new Models.Car(){brand="Audi", value= "Audi"},
                new Models.Car(){brand= "Bmw", value= "Bmw"},
                new Models.Car(){brand= "Fiat", value= "Fiat"},
                new Models.Car(){brand= "Honda", value= "Honda"},
                new Models.Car(){brand= "Jaguar", value= "Jaguar"},
                new Models.Car(){brand= "Mercedes", value= "Mercedes"},
                new Models.Car(){brand= "Renault", value= "Renault"},
                new Models.Car(){brand= "Volkswagen", value= "Volkswagen"},
                new Models.Car(){brand= "Volvo", value= "Volvo"}
    };
}
