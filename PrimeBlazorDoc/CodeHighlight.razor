<pre class="@languageClass" @ref="code">
    <code>
        @ChildContent
    </code>
</pre>

@code {
    [Parameter] public string lang { get; set; } = "markup";
    [Parameter] public RenderFragment? ChildContent { get; set; }
    private ElementReference code;
    private string languageClass
    {
        get
        {
            return "language-" + this.lang;
        }
    }
}
